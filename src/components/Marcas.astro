---
import { Picture } from "astro:assets";
import Container from "./Container.astro";
import iconJorda from "../assets/icon-jordan.png";
import iconNike from "../assets/nikeicon.png"
---

<Container>
  <section class="flex justify-center gap-10 pb-20">
    <div
      class="relative drop-shadow-xl w-48 h-64 overflow-hidden rounded-xl bg-[#3d3c3d]"
    >
      <div
        class="absolute flex items-center justify-center text-white z-[1] opacity-90 rounded-xl inset-0.5 bg-primary"
      >
        <Picture
        src={iconJorda}
        alt='asdasdas'    
        />
      </div>
      <div class="absolute w-56 h-48 bg-white blur-[50px] -left-1/2 -top-1/2">
      </div>
    </div>
    <div
      class="relative drop-shadow-xl w-48 h-64 overflow-hidden rounded-xl bg-[#3d3c3d]"
    >
      <div
        class="absolute flex items-center justify-center text-white z-[1] opacity-90 rounded-xl inset-0.5 bg-primary"
      >
      <Picture
      src={iconNike}
      alt='asdasdas'    
      />
      </div>
      <div class="absolute w-56 h-48 bg-white blur-[50px] -left-1/2 -top-1/2">
      </div>
    </div>
  </section>
</Container>

<style>
  
    @media (max-width: 630px) {
      .flex {
       flex-direction: column;
       align-items: center;
      }
    }
  </style>